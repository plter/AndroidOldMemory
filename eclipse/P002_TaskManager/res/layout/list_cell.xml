<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <ImageView android:layout_width="50dip" android:layout_height="50dip" android:id="@+id/appIconIv"/>
    <TextView android:text="TextView" android:id="@+id/processNameTv" android:layout_height="wrap_content" android:layout_weight="1" android:textSize="20dip" android:layout_width="wrap_content"></TextView>
    <CheckBox android:id="@+id/killableCb" android:focusable="false" android:layout_width="wrap_content" android:checked="true" android:layout_height="wrap_content"></CheckBox>
    <ImageView android:id="@+id/killProcessBtn" android:clickable="true" android:layout_height="48dip" android:background="#00000000" android:layout_width="wrap_content" android:src="@android:drawable/ic_delete"></ImageView>
</LinearLayout>
